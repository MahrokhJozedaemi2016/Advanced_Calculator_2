[MASTER]
# Append the current directory to sys.path to resolve local imports
init-hook='import sys; sys.path.append(".")'

[MESSAGES CONTROL]
# Disable specific warnings if necessary (example list):
disable=unused-argument,  # If there are unused arguments in methods
         line-too-long    # If lines exceed a set length (adjust if needed)

[REPORTS]
# Colorize output for better readability
output-format=colorized
# Set to 'no' if you don't want a full report
reports=no

[DESIGN]
# Limit class design complexity:
max-parents=15         # Maximum number of parents for a class
max-attributes=10      # Maximum number of attributes for a class
min-public-methods=0   # Minimum number of public methods
max-public-methods=20  # Maximum number of public methods

[BASIC]
# Set naming conventions:
variable-rgx=[a-z_][a-z0-9_]{0,30}$  # Variable names
function-rgx=[a-z_][a-z0-9_]{2,50}$  # Function names
argument-rgx=[a-z_][a-z0-9_]{1,30}$  # Argument names
method-rgx=[a-z_][a-z0-9_]{2,50}$    # Method names
module-rgx=[a-z_][a-z0-9_]{1,30}$    # Module names

